<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.daily_macros.DailyMacronutrientsFragment"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="374dp"
            android:layout_height="189dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Average daily intake of kcal. and
            macros for maintenance, according to your parameters"
            android:textAlignment="center"
            android:textColor="@color/mike"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textBMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginRight="70dp"
            android:text="BMR:"
            android:textColor="@color/mike"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textResultBMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/mike"
            android:text="..."
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/textBMR"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textDailyKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:text="Kcal"
            android:textColor="@color/mike"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginRight="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBMR" />

        <TextView
            android:id="@+id/textResultDailyKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/mike"
            android:text="..."
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/textDailyKcal"
            app:layout_constraintTop_toBottomOf="@id/textResultBMR"/>

        <TextView
            android:id="@+id/textDailyProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:text="Protein"
            android:textColor="@color/mike"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDailyKcal" />

        <TextView
            android:id="@+id/textResultDailyProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="28dp"
            android:text="..."
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/mike"
            app:layout_constraintStart_toEndOf="@id/textDailyProtein"
            app:layout_constraintTop_toBottomOf="@id/textResultDailyKcal" />

        <TextView
            android:id="@+id/textDailyCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:text="Carbs"
            android:textColor="@color/mike"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDailyProtein" />

        <TextView
            android:id="@+id/textResultDailyCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/mike"
            android:text="..."
            app:layout_constraintStart_toEndOf="@id/textDailyCarbs"
            app:layout_constraintTop_toBottomOf="@id/textResultDailyProtein"/>

        <TextView
            android:id="@+id/textDailyFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:text="Fat"
            android:textColor="@color/mike"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDailyCarbs" />

        <TextView
            android:id="@+id/textResultDailyFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/mike"
            android:text="..."
            app:layout_constraintStart_toEndOf="@id/textDailyFat"
            app:layout_constraintTop_toBottomOf="@id/textResultDailyCarbs"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>